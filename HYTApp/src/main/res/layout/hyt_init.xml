<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".visual.service.HYTInit" android:background="@drawable/hyt_library_back_200dp"
>

    <TextView
            android:text="The application requires some permissions in order to work properly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/hyt_message"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center" android:layout_margin="50dp"
            app:layout_constraintBottom_toTopOf="@id/hyt_confirm" android:textColor="@color/hyt_grey"
            android:textSize="20sp" android:lineHeight="30dp" app:layout_constrainedHeight="true"
            android:padding="5dp"/>
    <androidx.appcompat.widget.AppCompatButton
            android:text="Accept"
            android:layout_width="wrap_content"
            android:layout_height="0dp" android:id="@+id/hyt_confirm"
            app:layout_constraintTop_toBottomOf="@id/hyt_message"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:rippleColor="@color/hyt_accent" android:textColor="@color/hyt_text_dark"
            android:background="@drawable/hyt_meta_title_border_200dp" android:paddingLeft="30dp"
            android:paddingRight="30dp" android:paddingTop="2dp" android:paddingBottom="2dp"
            app:layout_constrainedWidth="true" app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintHeight_max="60dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>