<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".visual.model.HYTInit" android:background="@color/hyt_dark"
>

    <TextView
            android:text="The application requires some permissions in order to work properly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/hyt_message"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center" android:layout_margin="20dp"
            app:layout_constraintBottom_toTopOf="@id/hyt_confirm" android:textColor="@color/hyt_grey"
            android:textSize="20sp"/>
    <Button
            android:text="Accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/hyt_confirm"
            app:layout_constraintTop_toBottomOf="@id/hyt_message"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:rippleColor="@color/hyt_accent" android:textColor="#9781B8"
            android:background="@drawable/hyt_confirm_back_200dp" android:padding="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>