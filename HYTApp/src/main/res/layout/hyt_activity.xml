<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:keepScreenOn="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".visual.service.HYTActivity" android:id="@+id/LinearLayout1">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent" android:id="@+id/hyt_main"
                                                       android:clipToPadding="false" android:clipChildren="false">
        <androidx.fragment.app.FragmentContainerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="org.hyt.hytport.visual.fragment.visualizer.HYTVisualizer"
                android:id="@+id/fragmentContainerView" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/hyt_modal"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:clipChildren="false" android:visibility="gone" tools:visibility="visible"
        >

            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp" app:srcCompat="@drawable/hyt_back_200dp"
                    android:id="@+id/hyt_back"
                    android:scaleType="fitXY"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_margin="10dp" app:layout_constrainedWidth="true" android:id="@+id/hyt_info"
                    android:clipToPadding="false" android:clipChildren="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintDimensionRatio="1:1"
                    app:layout_constrainedHeight="false"
                    app:layout_constraintWidth_default="percent">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/hyt_cover_wrapper"
                        app:layout_constrainedHeight="true" app:layout_constrainedWidth="true"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/hyt_controls"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintVertical_weight="1">

                    <ImageButton
                            android:clipToOutline="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/hyt_cover"
                            android:scaleType="fitXY"
                            android:background="@drawable/hyt_cover_200dp" android:outlineProvider="background"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
                            android:src="@drawable/hyt_empty_cover_200dp"
                    />
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/hyt_cover_border" app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
                            app:srcCompat="@drawable/hyt_cover_border_200dp"
                            app:layout_constraintWidth_default="percent" app:layout_constraintDimensionRatio="1:1"
                            android:scaleType="fitXY"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/hyt_controls"
                        app:layout_constraintTop_toBottomOf="@id/hyt_cover_wrapper"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:clipToPadding="false"
                        android:clipChildren="false"
                        app:layout_constrainedWidth="false"
                        app:layout_constrainedHeight="true" app:layout_constraintDimensionRatio="4:1"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_weight="0.2"
                        android:layout_marginTop="5dp">

                    <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" app:srcCompat="@drawable/hyt_next_200dp"
                            android:id="@+id/hyt_next" android:background="#00FFFFFF"
                            app:layout_constrainedHeight="true" app:layout_constrainedWidth="true"
                            app:layout_constraintDimensionRatio="1:1" app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHeight_default="percent" app:layout_constraintHeight_percent="0.7"
                            android:scaleType="fitXY"
                            app:layout_constraintStart_toEndOf="@id/hyt_play"/>
                    <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" app:srcCompat="@drawable/hyt_next_200dp"
                            android:id="@+id/hyt_previous"
                            android:scaleType="fitXY" android:background="#00FFFFFF"
                            app:layout_constrainedHeight="true" app:layout_constrainedWidth="true"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintStart_toStartOf="parent" android:rotation="180.0"
                            app:layout_constraintHeight_default="percent" app:layout_constraintHeight_percent="0.7"
                            app:layout_constraintEnd_toStartOf="@id/hyt_play"/>
                    <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" app:srcCompat="@drawable/hyt_play_200dp"
                            android:id="@+id/hyt_play"
                            android:background="#00FFFFFF" android:scaleType="fitXY"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constrainedHeight="true" app:layout_constrainedWidth="true"
                            app:layout_constraintDimensionRatio="1:1" app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" app:layout_constraintVertical_bias="0.0"
                    android:background="@drawable/hyt_meta_back_200dp"
                    android:id="@+id/hyt_meta_container"
                    app:layout_constrainedHeight="true" app:layout_constraintHeight_default="percent"
                    app:layout_constraintHeight_max="wrap" app:layout_constraintHeight_percent="0.5"
                    android:paddingBottom="60dp" android:paddingTop="5dp" android:paddingLeft="10dp"
                    android:paddingRight="10dp" android:visibility="visible">
                <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollbarAlwaysDrawHorizontalTrack="false"
                        android:scrollbarAlwaysDrawVerticalTrack="false" android:scrollbarSize="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
                        android:id="@+id/hyt_meta_scroll_title"
                        app:layout_constraintBottom_toTopOf="@id/hyt_meta_scroll_artist"
                        app:layout_constrainedHeight="true"
                        android:saveEnabled="false"
                        android:measureAllChildren="false" android:layerType="none"
                        app:layout_constraintWidth_default="percent" app:layout_constraintWidth_percent="0.8"
                        app:layout_constraintWidth_max="wrap">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:isScrollContainer="false">

                        <ImageView
                                app:srcCompat="@drawable/hyt_meta_title_border_200dp" android:id="@+id/imageView2"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" android:scaleType="fitXY"
                                android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" android:id="@+id/hyt_meta_title"
                                android:maxLines="1"
                                android:isScrollContainer="false" android:scrollHorizontally="true"
                                android:textColor="@color/hyt_grey" android:textAlignment="center"
                                android:textStyle="bold" android:autoSizeMaxTextSize="25dp"
                                android:autoSizeMinTextSize="5dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" android:textSize="24sp"
                                android:paddingBottom="3dp" android:text="Title"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </HorizontalScrollView>
                <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/hyt_meta_scroll_artist"
                        app:layout_constraintTop_toBottomOf="@id/hyt_meta_scroll_title"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:scrollbarAlwaysDrawHorizontalTrack="false"
                        android:scrollbarAlwaysDrawVerticalTrack="false" android:scrollbarSize="0dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" android:id="@+id/hyt_meta_artist"
                            android:isScrollContainer="false" android:maxLines="1" android:scrollHorizontally="true"
                            android:textAlignment="center" android:autoSizeMaxTextSize="18dp"
                            android:autoSizeMinTextSize="5dp" android:textColor="#B296DD"
                            android:textSize="14sp" android:text="Artist"/>
                </HorizontalScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>