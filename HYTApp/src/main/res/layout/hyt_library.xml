<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".visual.service.HYTLibrary"
        android:backgroundTintMode="add" android:background="@drawable/hyt_library_back_200dp">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Search"
            android:ems="10"
            android:id="@+id/hyt_audio_search" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintBottom_toTopOf="@id/hyt_songs"
            app:layout_constraintTop_toTopOf="parent" android:singleLine="true"
            android:background="@drawable/hyt_meta_title_border_200dp" android:padding="10dp"
            android:layout_margin="10dp" android:textColor="@color/hyt_text_dark"
    />
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/hyt_songs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:padding="10dp" app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toTopOf="@id/hyt_library_controls"
            app:layout_constraintVertical_weight="8" app:layout_constraintTop_toBottomOf="@id/hyt_audio_search"
            app:layout_constrainedWidth="false"
    >
    </ListView>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/hyt_library_controls"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@id/hyt_songs"
            app:layout_constraintVertical_weight="0.6" app:layout_constrainedHeight="true"
            android:background="@color/hyt_dark">

        <ImageButton
                app:srcCompat="@drawable/hyt_library_open_200dp"
                android:id="@+id/hyt_player_back" android:background="#00FFFFFF" app:layout_constrainedHeight="true"
                android:scaleType="fitCenter"
                app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                app:layout_constrainedWidth="true"
                app:layout_constraintDimensionRatio="1.0:1.0"
                android:scaleX="0.5" android:scaleY="0.5" app:layout_constraintHeight_max="50dp"
                app:layout_constraintRight_toLeftOf="@id/hyt_switch"
                app:layout_constraintRight_toRightOf="parent"/>
        <androidx.appcompat.widget.AppCompatButton
                android:text="REMOTE"
                android:id="@+id/hyt_switch"
                app:layout_constrainedHeight="false"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" app:layout_constrainedWidth="true"
                android:textColor="@color/hyt_text_dark"
                android:background="@drawable/hyt_meta_title_border_200dp"
                android:backgroundTintMode="src_over"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/hyt_player_back" android:layout_width="wrap_content"
                app:layout_constraintHorizontal_weight="1"
                android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>