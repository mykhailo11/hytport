<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/hyt_player_fragment"
                                                   android:background="@color/hyt_dark" android:padding="40dp">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/hyt_meta"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/hyt_controls"
            android:padding="10dp">

        <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/hyt_meta_title_scroll"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/hyt_meta_artist_scroll" android:layout_marginBottom="10dp"
                android:scrollbarSize="0dp" android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:scrollbarAlwaysDrawVerticalTrack="false">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/hyt_meta_title"
                    android:textColor="@color/hyt_grey" android:textSize="34sp" android:text="Title"/>
        </HorizontalScrollView>
        <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/hyt_meta_artist_scroll"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hyt_meta_title_scroll"
                android:scrollbarAlwaysDrawVerticalTrack="false" android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:scrollbarSize="0dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/hyt_meta_artist"
                    android:textColor="@color/hyt_text_dark" android:text="artist"/>
        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/hyt_controls"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true" app:layout_constraintDimensionRatio="3.5:1.0"
            app:layout_constraintWidth_max="400dp" app:layout_constraintTop_toBottomOf="@id/hyt_meta"
    >

        <ImageButton
                android:layout_width="0dp"
                android:layout_height="0dp" app:srcCompat="@drawable/hyt_next_200dp"
                android:id="@+id/hyt_previous" android:background="#00FFFFFF" android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintRight_toLeftOf="@id/hyt_play"
                android:rotation="180"/>
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="0dp" app:srcCompat="@drawable/hyt_pause_200dp"
                android:id="@+id/hyt_play" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintLeft_toRightOf="@id/hyt_previous"
                android:background="#00FFFFFF" app:layout_constraintRight_toLeftOf="@id/hyt_next"
                android:scaleType="fitCenter"/>
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="0dp" app:srcCompat="@drawable/hyt_next_200dp"
                android:id="@+id/hyt_next" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="#00FFFFFF"
                app:layout_constraintLeft_toRightOf="@id/hyt_play" app:layout_constraintRight_toRightOf="parent"
                android:scaleType="fitCenter"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>