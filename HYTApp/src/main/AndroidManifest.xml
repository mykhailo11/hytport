<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="org.hyt.hytport"
          android:installLocation="preferExternal">

    <uses-permission
            android:name="android.permission.RECORD_AUDIO"
            tools:node="replace"/>
    <uses-permission
            android:name="android.permission.MODIFY_AUDIO_SETTINGS"
            tools:node="replace"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
            android:usesCleartextTraffic="true"
            android:allowBackup="false"
            android:icon="@mipmap/hyt_icon"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/hyt_icon_round"
            android:supportsRtl="true"
            android:theme="@style/Hytport">
        <activity
                android:name="org.hyt.hytport.visual.service.HYTInit"
                android:exported="true"
                android:launchMode="singleTask"
        >
            <intent-filter>
                <action android:name="org.hyt.hytport.PERMISSION"/>
            </intent-filter>
        </activity>

        <activity
                android:name="org.hyt.hytport.visual.service.HYTLibrary"
                android:exported="true"
                android:launchMode="singleTask"
                android:theme="@style/HytportSmall"
        >
            <intent-filter>
                <action android:name="org.hyt.hytport.LIBRARY"/>
            </intent-filter>
        </activity>

        <activity
                android:name="org.hyt.hytport.visual.service.HYTSettings"
                android:exported="true"
                android:launchMode="singleTask"
                android:theme="@style/HytportSmall"
        >
            <intent-filter>
                <action android:name="org.hyt.hytport.SETTINGS"/>
            </intent-filter>
        </activity>

        <activity
                android:exported="true"
                android:name="org.hyt.hytport.visual.service.HYTApp"
                android:launchMode="singleTask"
        >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
                android:name="org.hyt.hytport.audio.service.HYTService"
                android:enabled="true"
                android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
                <action android:name="org.hyt.hytport.PLAY"/>
                <action android:name="org.hyt.hytport.NEXT"/>
                <action android:name="org.hyt.hytport.PREVIOUS"/>
                <action android:name="org.hyt.hytport.DESTROY"/>
            </intent-filter>
        </service>
        <service android:name=".neural.service.HYTNeuralService"
                 android:enabled="true"/>
    </application>

</manifest>